{
    "extends": ["@gravity-ui/stylelint-config", "@gravity-ui/stylelint-config/prettier"],
    "rules": {
        "selector-pseudo-class-no-unknown": [
            true,
            {
                "ignorePseudoClasses": ["global", "local"]
            }
        ],
        "property-no-unknown": [
            true,
            {
                "ignoreProperties": ["composes"]
            }
        ],
        "value-keyword-case": [
            "lower",
            {
                "ignoreProperties": ["composes"]
            }
        ],
        "scss/at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": ["value"]
            }
        ]
    }
}
